{
  "name": "create-nodejs-ts",
  "version": "1.2.2",
  "description": "NodeJS Starter Project Kit",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-nodejs-ts": "cmd/create-nodejs-ts/index.js"
  },
  "scripts": {
    "start": "nodemon --ext js,ts,json,env src/index.ts",
    "prepare": "husky install",
    "build": "tsc --project tsconfig.build.json",
    "release": "standard-version",
    "test": "jest --detectOpenHandles --logHeapUsage",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "test:coverage:upload": "codecov -f coverage/*.json",
    "lint": "eslint --ext .ts,.js .",
    "lint:ci": "npm run lint && npm run prettier:ci",
    "prettier": "prettier 'src/**' --write --ignore-unknown",
    "prettier:ci": "prettier --check 'src/**' --ignore-unknown"
  },
  "engines": {
    "node": ">=14"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "repository": "git+https://github.com/vitorsalgado/create-nodejs-ts.git",
  "bugs": {
    "url": "https://github.com/vitorsalgado/create-nodejs-ts/issues"
  },
  "homepage": "https://github.com/vitorsalgado/create-nodejs-ts#readme",
  "keywords": [
    "nodejs",
    "nodejs-boilerplate",
    "typescript",
    "typescript-boilerplate",
    "starter",
    "boilerplate",
    "scaffold",
    "template"
  ],
  "dependencies": {
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "codecov": "^3.8.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
