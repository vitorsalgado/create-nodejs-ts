{
  "name": "create-nodejs-ts",
  "version": "2.0.1",
  "description": "NodeJS Starter Project Kit",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-nodejs-ts": "cmd/create-nodejs-ts/index.js"
  },
  "scripts": {
    "start": "nodemon --ext js,ts,json,env src/index.ts",
    "prepare": "husky install",
    "build": "tsc --project tsconfig.build.json",
    "release": "standard-version",
    "test": "jest --detectOpenHandles --logHeapUsage",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"src/**\" --write --ignore-unknown",
    "format:check": "prettier --check \"src/**\" --ignore-unknown"
  },
  "engines": {
    "node": ">=16"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "repository": "git+https://github.com/vitorsalgado/create-nodejs-ts.git",
  "bugs": {
    "url": "https://github.com/vitorsalgado/create-nodejs-ts/issues"
  },
  "homepage": "https://github.com/vitorsalgado/create-nodejs-ts#readme",
  "keywords": [
    "nodejs",
    "nodejs-boilerplate",
    "typescript",
    "typescript-boilerplate",
    "starter",
    "boilerplate",
    "scaffold",
    "template"
  ],
  "dependencies": {
    "dotenv": "^16.0.0",
    "fs-extra": "^10.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "packageManager": "yarn@3.1.1"
}
