{
  "name": "nodejs-toolkit",
  "version": "1.0.0",
  "description": "Node.js Development Toolkit",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "start:dev": "nodemon --exec 'node -r dotenv/config index.js'",
    "test": "jest",
    "test:cover": "npm run lint && jest --coverage",
    "lint": "eslint ./src",
    "security:check": "snyk protect && nsp check --output summary",
    "coveralls": "jest --coverage && cat reports/coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "private": true,
  "author": "Vitor Hugo Salgado <vsalgadopb@gmail.com>",
  "license": "Apache-2.0",
  "repository": "git+https://github.com/vitorsalgado/nodejs-boilerplate.git",
  "bugs": {
    "url": "https://github.com/vitorsalgado/nodejs-boilerplate/issues"
  },
  "homepage": "https://github.com/vitorsalgado/nodejs-boilerplate#readme",
  "dependencies": {
    "dotenv": "^4.0.0",
    "joi": "^13.0.2"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "commander": "^2.12.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.11.0",
    "eslint-config-nodesecurity": "^1.3.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "nsp": "^3.1.0",
    "semver": "^5.4.1",
    "snyk": "^1.50.0"
  },
  "jest": {
    "notify": false,
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true,
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coverageDirectory": "reports/coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/config/",
      "<rootDir>/src/libs/testUtils.js",
      "/scripts/"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "/scripts/"
    ],
    "testPathIgnorePatterns": [
      "__tests__/(fixtures|__mocks__)/",
      "/_(temp|mock|install|init|helpers|utils).js$"
    ]
  }
}
